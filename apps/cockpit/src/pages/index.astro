  textarea {
    width: 100%;
    background: #1a1a1a;
    color: #00ff00;
    border: 1px solid var(--border);
    padding: 1rem;
    font-family: monospace;
    font-size: 0.85rem;
    border-radius: 4px;
    resize: vertical;
    box-sizing: border-box;
    margin-top: 0.5rem;

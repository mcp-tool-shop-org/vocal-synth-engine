  .prov-list {
    font-size: 0.85rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  .hash {
    font-family: monospace;
    background: #2a2a2a;
    padding: 0.1rem 0.3rem;
